@model HunterCV.FrontSite.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}
<!-- BEGIN CONTENT HOLDER -->
<div id="content-wrapper">
    <section class="indent">
        <div class="container sign-up-container">
            <h2>
                You are one step away from hunting like a pro!</h2>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "signup" }))
            {
                @Html.AntiForgeryToken()
                @Html.CustomValidationSummary("")

                <p class="clearfix">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </p>
                <p class="clearfix">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </p>
                <p class="clearfix">
                    @Html.LabelFor(m => m.Company)
                    @Html.TextBoxFor(m => m.Company)
                </p>
                <p class="clearfix">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </p>
                <p class="clearfix">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </p>

                <input type="submit" name="submit" id="submit" value="Register" /><i class="btn-marker"></i>
            }
        </div>
    </section>
</div>


@section navigation {
    <ul class="sf-menu">
        <li class="">
            @Html.ActionLink("home", "Index", "Home")
        </li>
        <li class="">
            @Html.ActionLink("features", "Features", "Home")
        </li>
        <li class="">
            @Html.ActionLink("plans", "Plans", "Home")
        </li>
        <li class="">
            @Html.ActionLink("contact us", "Contact", "Home")
        </li>
    </ul>
}