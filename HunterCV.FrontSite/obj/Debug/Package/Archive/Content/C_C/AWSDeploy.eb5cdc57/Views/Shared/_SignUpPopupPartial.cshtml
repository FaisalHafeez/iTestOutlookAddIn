@model HunterCV.FrontSite.Models.RegisterModel
<div id="signup" class="reveal-modal">
    <header class="reveal-modal-header">
			Sign Up
		</header>
    <div class="cont">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "signup" }))
        {
            @Html.AntiForgeryToken()
            <p class="clearfix">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
          </p>
            <p class="clearfix">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
                     @Html.ValidationMessageFor(m => m.Email)
          </p>
            <p class="clearfix">
                @Html.LabelFor(m => m.Company)
                @Html.TextBoxFor(m => m.Company)
                @Html.ValidationMessageFor(m => m.Company)
            </p>
            <p class="clearfix">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </p>
            <p class="clearfix">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </p>
            <p class="checkboxes without-label clearfix">
                <span class="niceCheck">
                    <input type="checkbox" name="ch1" /></span>I agree with Terms &amp; Privacy Policy
            </p>
            <p class="without-label clearfix">
                <input type="submit" value="" /></p>
        }
    </div>
    <a class="close-reveal-modal">&#215;</a>
</div>