                            </div>
                            <footer class="pr-foot">
                                @if (!Request.IsAuthenticated || (Request.IsAuthenticated && ViewBag.LicenseType == "None"))
                                {
                                    <text> <a href="#" data-reveal-id="signup" class="pill pill-style9"><span class="pill-inner">
                                        Download</span></a>
                                    </text> 
                                }
                                else if (Request.IsAuthenticated && ViewBag.LicenseType == "Free")
                                {
                                    <a href="#" class="pill pill-style9"><span class="pill-inner">Current Plan</span></a>
