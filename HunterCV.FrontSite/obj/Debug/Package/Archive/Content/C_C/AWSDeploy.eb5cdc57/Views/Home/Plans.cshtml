@{
    ViewBag.Title = "Plans";
}

@if (Request.IsAuthenticated)
{
<form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">

<input type="hidden" name="cbt" value="Back to HunterCV web-site & finishing Your purchase" />
<input type="hidden" name="return" value="http://localhost:2052/subscription/success?role=@(Url.Encode(System.Web.Security.Roles.GetRolesForUser()[0]))" />
<input type="hidden" name="cancel_return" value="http://localhost:2052/subscription/cancel?role=@(Url.Encode(System.Web.Security.Roles.GetRolesForUser()[0]))" />

<input type="hidden" name="custom" value="@(System.Web.Security.Roles.GetRolesForUser()[0])" />
<input type="hidden" name="lc" value="US" />
<input type="hidden" name="image_url" value="http://www.kosher-browser.com/images/paypal-150x50.png" />
<input type="hidden" name="cpp_header_image" value="http://www.huntercv.com/Images/logo.png" />

<input type="hidden" name="cmd" value="_s-xclick">
<input type="hidden" name="hosted_button_id" value="VEXBD4R4PBF8J">
<input type="image" src="https://www.paypalobjects.com/en_US/IL/i/btn/btn_subscribeCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
<img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
</form>

<A HREF="https://www.paypal.com/cgi-bin/webscr?cmd=_subscr-find&alias=LMNE8Q6Y4364A">
<IMG SRC="https://www.paypalobjects.com/en_US/i/btn/btn_unsubscribe_LG.gif" BORDER="0">
</A>
}

